<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01//EN"
"http://www.w3.org/TR/html4/strict.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" lang="en">

<% include header.html %>

    <div class="container">
        <h1>已举报内容</h1>
        <hr />
        <% if(result.length>0){%>
            <% result.forEach(function(element){%>
                <div class="row">
                    <h4 class="col-md-4"><%= element.content %></h4>
                    <img  width="100" src="<%= element.content_image_url%>" class="col-md-4"></img>
                    <img width="40" src="<%= element.user_face_image%>" class="col-md-2" />
                    <h4 class="col-md-2"><%= element.user_name%> </h4>
                    <button id="<%= element.content_id%>" onclick="deleteContent('<%= element.content_id%>')" class="btn btn-danger">删除</button>
                </div>
                <hr />
            <%})%>
        <%}%>
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <ul class="pagination">
                    <li><a href="#" <%if(page == 1){%> class="active"<%}%> >1</a></li>
                    <li><a href="#" <%if(page == 2){%> class="active"<%}%> >2</a></li>
                    <li><a href="#" <%if(page == 3){%> class="active"<%}%> >3</a></li>
                    <li><a href="#" <%if(page == 4){%> class="active"<%}%> >4</a></li>
                    <li><a href="#" <%if(page == 5){%> class="active"<%}%> >5</a></li>
                </ul>
            </div>
        </div>

    </div>
</body>

</html>
